<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>io.apicurio</groupId>
        <artifactId>apicurio-registry-distro</artifactId>
        <version>1.2.1-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>apicurio-registry-distro-docker</artifactId>
    <packaging>pom</packaging>
    <name>apicurio-registry-distro-docker</name>

    <properties>
        <docker.app.file>app-files/apicurio-registry-app-${project.version}-all.tar.gz</docker.app.file>
        <docker.jpa.file>app-files/apicurio-registry-storage-jpa-${project.version}-all.tar.gz</docker.jpa.file>
        <docker.infinispan.file>app-files/apicurio-registry-storage-infinispan-${project.version}-all.tar.gz</docker.infinispan.file>
        <docker.kafka.file>app-files/apicurio-registry-storage-kafka-${project.version}-all.tar.gz</docker.kafka.file>
        <docker.streams.file>app-files/apicurio-registry-storage-streams-${project.version}-all.tar.gz</docker.streams.file>
    </properties>

    <build>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-target-app</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/target/docker/app-files</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/../../app/target</directory>
                                    <filtering>false</filtering>
                                    <includes>
                                        <include>apicurio-*.tar.gz</include>
                                        <include>apicurio-*runner</include>
                                    </includes>
                                </resource>
                                <resource>
                                    <directory>${basedir}/../../storage/jpa/target</directory>
                                    <filtering>false</filtering>
                                    <includes>
                                        <include>apicurio-*.tar.gz</include>
                                        <include>apicurio-*runner</include>
                                    </includes>
                                </resource>
                                <resource>
                                    <directory>${basedir}/../../storage/infinispan/target</directory>
                                    <filtering>false</filtering>
                                    <includes>
                                        <include>apicurio-*.tar.gz</include>
                                        <include>apicurio-*runner</include>
                                    </includes>
                                </resource>
                                <resource>
                                    <directory>${basedir}/../../storage/kafka/target</directory>
                                    <filtering>false</filtering>
                                    <includes>
                                        <include>apicurio-*.tar.gz</include>
                                        <include>apicurio-*runner</include>
                                    </includes>
                                </resource>
                                <resource>
                                    <directory>${basedir}/../../storage/streams/target</directory>
                                    <filtering>false</filtering>
                                    <includes>
                                        <include>apicurio-*.tar.gz</include>
                                        <include>apicurio-*runner</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-docker</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/target/docker</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/docker</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>io.fabric8</groupId>
                <artifactId>docker-maven-plugin</artifactId>
                <version>0.33.0</version>
                <executions>
                    <execution>
                        <id>docker-build</id>
                        <phase>package</phase>
                        <goals>
                            <goal>build</goal>
                        </goals>
                        <configuration>
                            <images>
                                <image>
                                    <name>apicurio/apicurio-registry-mem:${project.version}</name>
                                    <build>
                                        <contextDir>${project.build.directory}/docker</contextDir>
                                        <dockerFile>./Dockerfile.jvm</dockerFile>
                                        <tags combine.children="append">
                                            <tag>latest</tag>
                                            <tag>${docker.tag.name}</tag>
                                        </tags>
                                    </build>
                                </image>
                            </images>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>

        </plugins>
    </build>

    <profiles>

        <profile>
            <id>native</id>
            <build>
                <plugins>

                    <plugin>
                        <groupId>io.fabric8</groupId>
                        <artifactId>docker-maven-plugin</artifactId>
                        <version>0.33.0</version>
                        <executions>
                            <execution>
                                <id>docker-build</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>build</goal>
                                </goals>
                                <configuration>
                                    <images>
                                        <image>
                                            <name>apicurio/apicurio-registry-mem:${project.version}-native</name>
                                            <build>
                                                <contextDir>${project.build.directory}/docker</contextDir>
                                                <dockerFile>./Dockerfile.native</dockerFile>
                                                <tags combine.children="append">
                                                    <tag>latest</tag>
                                                </tags>
                                            </build>
                                        </image>
                                    </images>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                </plugins>
            </build>
        </profile>

        <profile>
            <id>jpa</id>
            <dependencies>
                <dependency>
                    <groupId>io.apicurio</groupId>
                    <artifactId>apicurio-registry-storage-jpa</artifactId>
                    <version>${project.version}</version>
                    <scope>provided</scope>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.fabric8</groupId>
                        <artifactId>docker-maven-plugin</artifactId>
                        <version>0.33.0</version>
                        <executions>
                            <execution>
                                <id>docker-build</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>build</goal>
                                </goals>
                                <configuration>
                                    <images>
                                        <image>
                                            <name>apicurio/apicurio-registry-jpa:${project.version}</name>
                                            <build>
                                                <contextDir>${project.build.directory}/docker</contextDir>
                                                <dockerFile>./Dockerfile.jpa.jvm</dockerFile>
                                                <tags combine.children="append">
                                                    <tag>latest</tag>
                                                </tags>
                                            </build>
                                        </image>
                                    </images>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>infinispan</id>
            <dependencies>
                <dependency>
                    <groupId>io.apicurio</groupId>
                    <artifactId>apicurio-registry-storage-infinispan</artifactId>
                    <version>${project.version}</version>
                    <scope>provided</scope>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.fabric8</groupId>
                        <artifactId>docker-maven-plugin</artifactId>
                        <version>0.33.0</version>
                        <executions>
                            <execution>
                                <id>docker-build</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>build</goal>
                                </goals>
                                <configuration>
                                    <images>
                                        <image>
                                            <name>apicurio/apicurio-registry-infinispan:${project.version}</name>
                                            <build>
                                                <contextDir>${project.build.directory}/docker</contextDir>
                                                <dockerFile>./Dockerfile.infinispan.jvm</dockerFile>
                                                <tags combine.children="append">
                                                    <tag>latest</tag>
                                                </tags>
                                            </build>
                                        </image>
                                    </images>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>kafka</id>
            <dependencies>
                <dependency>
                    <groupId>io.apicurio</groupId>
                    <artifactId>apicurio-registry-storage-kafka</artifactId>
                    <version>${project.version}</version>
                    <scope>provided</scope>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.fabric8</groupId>
                        <artifactId>docker-maven-plugin</artifactId>
                        <version>0.33.0</version>
                        <executions>
                            <execution>
                                <id>docker-build</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>build</goal>
                                </goals>
                                <configuration>
                                    <images>
                                        <image>
                                            <name>apicurio/apicurio-registry-kafka:${project.version}</name>
                                            <build>
                                                <contextDir>${project.build.directory}/docker</contextDir>
                                                <dockerFile>./Dockerfile.kafka.jvm</dockerFile>
                                                <tags combine.children="append">
                                                    <tag>latest</tag>
                                                </tags>
                                            </build>
                                        </image>
                                    </images>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>streams</id>
            <dependencies>
                <dependency>
                    <groupId>io.apicurio</groupId>
                    <artifactId>apicurio-registry-storage-streams</artifactId>
                    <version>${project.version}</version>
                    <scope>provided</scope>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.fabric8</groupId>
                        <artifactId>docker-maven-plugin</artifactId>
                        <version>0.33.0</version>
                        <executions>
                            <execution>
                                <id>docker-build</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>build</goal>
                                </goals>
                                <configuration>
                                    <images>
                                        <image>
                                            <name>apicurio/apicurio-registry-streams:${project.version}</name>
                                            <build>
                                                <contextDir>${project.build.directory}/docker</contextDir>
                                                <dockerFile>./Dockerfile.streams.jvm</dockerFile>
                                                <tags combine.children="append">
                                                    <tag>latest</tag>
                                                </tags>
                                            </build>
                                        </image>
                                    </images>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>skipDocker</id>
            <activation>
                <property>
                    <name>!docker</name>
                </property>
            </activation>

            <properties>
                <docker.skip>true</docker.skip>
            </properties>

        </profile>

    </profiles>

</project>
