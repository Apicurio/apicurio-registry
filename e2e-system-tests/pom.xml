        <!-- Finally, these are the different test groups, this will determine the tests executed using the defined storage -->
        <profile>
            <id>all</id>
            <properties>
                <skipTests>false</skipTests>
                <groups>( smoke | serdes | acceptance | ui)</groups>
            </properties>
        </profile>

        <profile>
            <id>ci</id>
            <properties>
                <skipTests>false</skipTests>
                <groups>( smoke | serdes | acceptance )</groups>
            </properties>
        </profile>

        <profile>
            <id>smoke</id>
            <properties>
                <groups>smoke</groups>
                <skipTests>false</skipTests>
            </properties>
        </profile>

        <profile>
            <id>serdes</id>
            <properties>
                <groups>serdes</groups>
                <skipTests>false</skipTests>
            </properties>
        </profile>

        <profile>
            <id>ui</id>
            <properties>
                <groups>ui</groups>
                <skipTests>false</skipTests>
            </properties>
        </profile>

        <profile>
            <id>acceptance</id>
            <properties>
                <skipTests>false</skipTests>
                <groups>acceptance &amp; !multitenancy</groups>
            </properties>
        </profile>

        <profile>
            <id>auth</id>
            <properties>
                <groups>auth</groups>
                <skipTests>false</skipTests>
