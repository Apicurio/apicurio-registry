{
  "$id": "geographical-location.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CoordinatesOnMap",
  "description": "A geographical coordinate on a planet (most commonly Earth).",
  "required": [
    "latitude",
    "longitude"
  ],
  "type": "object",
  "properties": {
    "latitude": {
      "type": "number",
      "minimum": -90,
      "maximum": 90
    },
    "longitude": {
      "type": "number",
      "minimum": -180,
      "maximum": 180
    }
  }
}