{
  "$schema": "https://apicur.io/schemas/model-schema/v1",
  "modelId": "claude-3-opus",
  "provider": "anthropic",
  "version": "2024-02",
  "input": {
    "type": "object",
    "properties": {
      "model": {
        "type": "string",
        "description": "The model identifier",
        "const": "claude-3-opus-20240229"
      },
      "messages": {
        "type": "array",
        "description": "Input messages for the conversation",
        "items": {
          "type": "object",
          "properties": {
            "role": {
              "type": "string",
              "enum": ["user", "assistant"],
              "description": "The role of the message author"
            },
            "content": {
              "oneOf": [
                { "type": "string" },
                {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "type": { "type": "string", "enum": ["text", "image"] },
                      "text": { "type": "string" },
                      "source": { "type": "object" }
                    }
                  }
                }
              ],
              "description": "The content of the message"
            }
          },
          "required": ["role", "content"]
        }
      },
      "max_tokens": {
        "type": "integer",
        "minimum": 1,
        "maximum": 4096,
        "description": "Maximum number of tokens to generate"
      },
      "system": {
        "type": "string",
        "description": "System prompt for the conversation"
      },
      "temperature": {
        "type": "number",
        "minimum": 0,
        "maximum": 1,
        "default": 1,
        "description": "Sampling temperature"
      },
      "top_p": {
        "type": "number",
        "minimum": 0,
        "maximum": 1,
        "description": "Nucleus sampling parameter"
      },
      "top_k": {
        "type": "integer",
        "minimum": 0,
        "description": "Top-k sampling parameter"
      },
      "tools": {
        "type": "array",
        "description": "Tools available to the model",
        "items": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "description": { "type": "string" },
            "input_schema": { "type": "object" }
          },
          "required": ["name", "input_schema"]
        }
      }
    },
    "required": ["messages", "max_tokens"]
  },
  "output": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "Unique identifier for the message"
      },
      "type": {
        "type": "string",
        "const": "message"
      },
      "role": {
        "type": "string",
        "const": "assistant"
      },
      "content": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "type": { "type": "string", "enum": ["text", "tool_use"] },
            "text": { "type": "string" },
            "id": { "type": "string" },
            "name": { "type": "string" },
            "input": { "type": "object" }
          }
        }
      },
      "model": {
        "type": "string",
        "description": "The model that handled the request"
      },
      "stop_reason": {
        "type": "string",
        "enum": ["end_turn", "max_tokens", "stop_sequence", "tool_use"],
        "description": "The reason the model stopped generating"
      },
      "stop_sequence": {
        "type": "string",
        "description": "The stop sequence that triggered completion"
      },
      "usage": {
        "type": "object",
        "properties": {
          "input_tokens": { "type": "integer" },
          "output_tokens": { "type": "integer" }
        }
      }
    },
    "required": ["id", "type", "role", "content", "model", "stop_reason", "usage"]
  },
  "metadata": {
    "contextWindow": 200000,
    "maxOutputTokens": 4096,
    "capabilities": [
      "chat",
      "tool_use",
      "vision",
      "extended_thinking"
    ],
    "pricing": {
      "input": 0.015,
      "output": 0.075,
      "currency": "USD",
      "unit": "1K tokens"
    },
    "trainingDataCutoff": "2024-02",
    "supportedLanguages": ["en", "es", "fr", "de", "it", "pt", "zh", "ja", "ko", "ar", "hi"]
  }
}
