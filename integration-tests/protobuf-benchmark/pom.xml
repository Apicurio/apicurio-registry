<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!--
        Standalone benchmark module for comparing old (Wire-based) vs new (protobuf4j-based)
        Apicurio protobuf schema utilities performance.
        This module is intentionally standalone (no parent) to allow independent execution.
    -->
    <groupId>io.apicurio</groupId>
    <artifactId>apicurio-registry-protobuf-benchmark</artifactId>
    <version>1.0.0</version>
    <packaging>jar</packaging>
    <name>apicurio-registry-protobuf-benchmark</name>
    <description>Benchmark comparing old (Wire) vs new (protobuf4j) Apicurio schema utilities</description>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <maven.compiler.release>17</maven.compiler.release>

        <!-- New implementation (protobuf4j) -->
        <new.registry.version>3.1.5-SNAPSHOT</new.registry.version>

        <!-- Google Protobuf - must match version used by old library's generated code (4.33.2) -->
        <protobuf-java.version>4.33.2</protobuf-java.version>
    </properties>

    <dependencies>
        <!-- OLD: Shaded old protobuf schema utilities (Wire-based, relocated to io.apicurio.registry.old) -->
        <dependency>
            <groupId>io.apicurio</groupId>
            <artifactId>apicurio-registry-old-protobuf-serializer</artifactId>
            <version>${new.registry.version}</version>
        </dependency>

        <!-- NEW: Current protobuf schema utilities (protobuf4j-based) -->
        <dependency>
            <groupId>io.apicurio</groupId>
            <artifactId>apicurio-registry-protobuf-schema-utilities</artifactId>
            <version>${new.registry.version}</version>
        </dependency>

        <!-- Google Protobuf Java runtime (shared by both) -->
        <dependency>
            <groupId>com.google.protobuf</groupId>
            <artifactId>protobuf-java</artifactId>
            <version>${protobuf-java.version}</version>
        </dependency>

        <!-- Kotlin runtime - needed by both Wire and protobuf4j -->
        <!-- Use Kotlin 2.1.0+ for SpillingKt class required by kotlinx-coroutines 1.9.0 -->
        <dependency>
            <groupId>org.jetbrains.kotlin</groupId>
            <artifactId>kotlin-stdlib</artifactId>
            <version>2.1.0</version>
        </dependency>
        <dependency>
            <groupId>org.jetbrains.kotlinx</groupId>
            <artifactId>kotlinx-coroutines-core-jvm</artifactId>
            <version>1.9.0</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.13.0</version>
                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                    <release>${maven.compiler.release}</release>
                </configuration>
            </plugin>

            <!-- Create executable JAR with dependencies -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.6.0</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <createDependencyReducedPom>false</createDependencyReducedPom>
                            <transformers>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>io.apicurio.registry.benchmark.ProtobufParsingBenchmark</mainClass>
                                </transformer>
                            </transformers>
                            <filters>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/*.SF</exclude>
                                        <exclude>META-INF/*.DSA</exclude>
                                        <exclude>META-INF/*.RSA</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Also allow running with exec:java -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.5.0</version>
                <configuration>
                    <mainClass>io.apicurio.registry.benchmark.ProtobufParsingBenchmark</mainClass>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
