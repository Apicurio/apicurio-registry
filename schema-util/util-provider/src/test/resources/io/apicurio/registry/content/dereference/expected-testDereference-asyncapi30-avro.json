{
    "asyncapi": "3.0.0",
    "info": {
        "title": "Event Service API",
        "version": "1.0.0",
        "description": "API for event processing with Avro schemas"
    },
    "channels": {
        "userEvents": {
            "address": "events/user",
            "messages": {
                "userEventMessage": {
                    "$ref": "#/components/messages/UserEventMessage"
                }
            }
        }
    },
    "components": {
        "messages": {
            "UserEventMessage": {
                "payload": {
                    "schemaFormat": "application/vnd.apache.avro+json;version=1.12.0",
                    "schema": {
                        "type": "record",
                        "name": "UserEvent",
                        "namespace": "com.example",
                        "fields": [
                            {
                                "name": "userId",
                                "type": "string"
                            },
                            {
                                "name": "eventType",
                                "type": "string"
                            },
                            {
                                "name": "timestamp",
                                "type": "long"
                            }
                        ]
                    }
                }
            }
        }
    }
}
