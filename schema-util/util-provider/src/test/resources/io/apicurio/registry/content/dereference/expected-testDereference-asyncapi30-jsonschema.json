{
    "asyncapi": "3.0.0",
    "info": {
        "title": "Customer Service API",
        "version": "1.0.0",
        "description": "API for customer events with JSON Schema references"
    },
    "channels": {
        "customerUpdates": {
            "address": "customer/updates",
            "messages": {
                "customerUpdateMessage": {
                    "$ref": "#/components/messages/CustomerUpdateMessage"
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Address": {
                "schemaFormat": "application/schema+json",
                "schema": {
                    "type": "object",
                    "properties": {
                        "street": {
                            "type": "string"
                        },
                        "city": {
                            "type": "string"
                        },
                        "state": {
                            "type": "string"
                        },
                        "zipCode": {
                            "type": "string",
                            "pattern": "^[0-9]{5}$"
                        }
                    },
                    "required": [
                        "street",
                        "city",
                        "state",
                        "zipCode"
                    ]
                }
            },
            "Contact": {
                "schemaFormat": "application/schema+json",
                "schema": {
                    "type": "object",
                    "properties": {
                        "phone": {
                            "type": "string",
                            "pattern": "^\\+?[0-9]{10,15}$"
                        },
                        "email": {
                            "type": "string",
                            "format": "email"
                        }
                    },
                    "required": [
                        "email"
                    ]
                }
            }
        },
        "messages": {
            "CustomerUpdateMessage": {
                "payload": {
                    "type": "object",
                    "required": [
                        "customerId",
                        "address"
                    ],
                    "properties": {
                        "customerId": {
                            "type": "string"
                        },
                        "address": {
                            "$ref": "#/components/schemas/Address"
                        },
                        "contact": {
                            "$ref": "#/components/schemas/Contact"
                        }
                    }
                }
            }
        }
    }
}
