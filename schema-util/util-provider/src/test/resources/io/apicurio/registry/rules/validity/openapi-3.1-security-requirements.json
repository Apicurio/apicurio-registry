{
    "openapi": "3.1.0",
    "info": {
        "title": "My Simplest API",
        "version": "1.0.0"
    },
    "paths": {
        "/hello": {
            "get": {
                "summary": "Returns a greeting",
                "security": [
                    {
                        "HTTPBearer": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string",
                                    "example": "Hello, World!"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "HTTPBearer": {
                "type": "http",
                "scheme": "bearer"
            }
        }
    }
}
