                            <skipTests>${skipTests}</skipTests>
                        </configuration>
                        <executions>
                            <execution>
                                <id>in memory test run</id>
                                <goals>
                                    <goal>integration-test</goal>
                                    <goal>verify</goal>
                                </goals>
